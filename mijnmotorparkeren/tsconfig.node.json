{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "scripts/**/*.ts",
    "src/types/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}